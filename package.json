{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio website",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "editor": "vite --config vite.editor.config.js",
    "format": "prettier --write \"src/**/*.{html,css,js}\""
  },
  "dependencies": {
    "serve": "^14.2.1"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "prettier": "^3.1.0"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "strict",
    "preserveNewlines": true,
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "html",
          "htmlWhitespaceSensitivity": "strict",
          "preserveNewlines": true,
          "printWidth": 120,
          "bracketSameLine": true
        }
      }
    ]
  }
}
